<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sa.fakked.net.mancal_app.Play_game">

    <RelativeLayout
            android:layout_height="130dp"
            android:layout_width="430dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:id="@+id/relativeLayout">

        <Button
            android:text="0"
            android:background="@drawable/redkalah"
            android:id="@+id/buttonKalah1"
            android:textSize="14sp"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit11"
            android:background="@drawable/pitblue"
            android:layout_toRightOf="@+id/buttonKalah1"
            android:layout_toEndOf="@+id/buttonKalah1"
            android:layout_alignBottom="@+id/buttonKalah1"
            android:layout_marginTop="20dp"
            android:onClick="movePitOnePlayerOne" />
        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit12"
                android:background="@drawable/pitblue"
                android:layout_alignTop="@+id/buttonPit11"
                android:layout_toRightOf="@+id/buttonPit11"
                android:layout_toEndOf="@+id/buttonPit11"
                android:onClick="movePitTwoPlayerOne" android:layout_marginLeft="10dp"/>
        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit13"
            android:background="@drawable/pitblue"
            android:layout_toRightOf="@+id/buttonPit12"
            android:layout_toEndOf="@+id/buttonPit12"
            android:layout_alignBottom="@+id/buttonPit12"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:onClick="movePitThreePlayerOne" />

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit14"
            android:background="@drawable/pitblue"
            android:layout_toRightOf="@+id/buttonPit13"
            android:layout_toEndOf="@+id/buttonPit13"
            android:layout_alignBottom="@+id/buttonPit13"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:onClick="movePitFourPlayerOne" />

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit15"
            android:background="@drawable/pitblue"
            android:layout_toRightOf="@+id/buttonPit14"
            android:layout_toEndOf="@+id/buttonPit14"
            android:layout_alignBottom="@+id/buttonPit14"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:onClick="movePitFivePlayerOne" />

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit23"
            android:background="@drawable/pitred"
            android:layout_weight="1"
            android:layout_above="@+id/buttonPit15"
            android:layout_toLeftOf="@+id/buttonPit15"
            android:layout_toStartOf="@+id/buttonPit15"
            android:onClick="movePitThreePlayerTwo" />

        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit24"
                android:background="@drawable/pitred"
                android:layout_weight="1"
                android:layout_alignLeft="@+id/buttonPit13"
                android:layout_alignStart="@+id/buttonPit13"
                android:onClick="movePitFourPlayerTwo" android:layout_toLeftOf="@+id/buttonPit14"
                android:layout_toStartOf="@+id/buttonPit14" android:layout_above="@+id/buttonPit14"/>

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button13"
            android:background="@drawable/pitred"
            android:layout_weight="1"
            android:layout_alignLeft="@+id/buttonPit16"
            android:layout_alignStart="@+id/buttonPit16"
            android:layout_alignBottom="@+id/buttonPit12"
            android:onClick="movePitSixPlayerOne" />

        <Button
            android:text="3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonPit16"
            android:background="@drawable/pitblue"
            android:layout_toRightOf="@+id/buttonPit15"
            android:layout_toEndOf="@+id/buttonPit15"
            android:layout_alignBottom="@+id/buttonPit15"
            android:layout_marginLeft="10dp"
            android:onClick="movePitSixPlayerOne" />

        <Button
            android:text="0"
            android:background="@drawable/bluekalah"
            android:id="@+id/buttonKalah2"
            android:textSize="14sp"
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:layout_alignBottom="@+id/buttonPit16"
            android:layout_toRightOf="@+id/button13"
            android:layout_toEndOf="@+id/button13" />
        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit21"
                android:background="@drawable/pitred"
                android:layout_weight="1"
                android:onClick="movePitOnePlayerTwo"
                android:layout_above="@+id/buttonPit15" android:layout_toLeftOf="@+id/buttonKalah2"
                android:layout_toStartOf="@+id/buttonKalah2"/>
        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit25"
                android:background="@drawable/pitred"
                android:layout_weight="1"
                android:onClick="movePitFivePlayerTwo"
                android:layout_alignLeft="@+id/buttonPit12" android:layout_alignStart="@+id/buttonPit12"
                android:layout_above="@+id/buttonPit11"/>
        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit22"
                android:background="@drawable/pitred"
                android:layout_weight="1"
                android:onClick="movePitTwoPlayerTwo"
                android:layout_above="@+id/buttonPit15" android:layout_alignLeft="@+id/buttonPit15"
                android:layout_alignStart="@+id/buttonPit15"/>

        <Button
                android:text="3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonPit26"
                android:background="@drawable/pitred"
                android:layout_weight="1"
                android:onClick="movePitSixPlayerTwo"
                android:layout_alignLeft="@+id/buttonPit11" android:layout_alignStart="@+id/buttonPit11"
                android:layout_above="@+id/buttonPit11"/>
        <TextView
                android:text="Winner "
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerVertical="true"
                android:layout_marginLeft="42dp" android:layout_marginStart="42dp" android:id="@+id/winnerText"
                android:layout_alignRight="@+id/buttonPit23" android:layout_alignEnd="@+id/buttonPit23"
                android:textAllCaps="true" android:foregroundGravity="center_horizontal"
                android:gravity="clip_vertical" android:textStyle="bold" android:layout_alignParentTop="true"
                android:textColor="@android:color/holo_green_dark"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/playerTwoName"
            android:text="Player 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:layout_alignParentTop="true"/>
    <TextView
            android:id="@+id/playerOneName"
            android:text="Player 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:layout_below="@+id/relativeLayout"
            />
</RelativeLayout>
